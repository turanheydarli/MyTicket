@model IEnumerable<CinemaHall>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Cinema Halls</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Cinema Halls List</h6>
            <a href="@Url.Action("Create", "CinemaHall")" class="btn btn-primary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Create New Cinema Hall</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Capacity</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Capacity</th>
                        <th>Actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var hall in Model)
                    {
                        <tr>
                            <td>@hall.Id</td>
                            <td>@hall.Name</td>
                            <td>@hall.Location</td>
                            <td>@hall.Capacity</td>
                            <td>
                                <a href="@Url.Action("Update", "CinemaHall", new { id = hall.Id })" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                                <form asp-action="Delete" asp-controller="CinemaHall" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this hall?');">
                                    <input type="hidden" name="id" value="@hall.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
