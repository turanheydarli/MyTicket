@model IList<Showtime>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Showtimes</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Showtimes List</h6>
            <a href="@Url.Action("Create", "Showtime")" class="btn btn-primary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Create New Showtime</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Movie</th>
                        <th>Cinema Hall</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Movie</th>
                        <th>Cinema Hall</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var showtime in Model)
                    {
                        <tr>
                            <td>@showtime.Id</td>
                            <td>@showtime.Movie.Title</td>
                            <td>@showtime.CinemaHall.Name</td>
                            <td>@showtime.StartTime.ToString("g")</td>
                            <td>@showtime.EndTime.ToString("g")</td>
                            <td>
                                <a href="@Url.Action("Update", "Showtime", new { id = showtime.Id })" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-controller="Showtime" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this showtime?');">
                                    <input type="hidden" name="id" value="@showtime.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
