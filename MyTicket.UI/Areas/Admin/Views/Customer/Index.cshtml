@model IList<Customer>

<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Customers</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Customers List</h6>
            <a href="@Url.Action("Create", "Customer")" class="btn btn-primary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Create New Movie</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.Id</td>
                            <td>@customer.Name</td>
                            <td>@customer.PhoneNumber</td>
                            <td>
                                <a href="@Url.Action("Update", "Customer", new { id = customer.Id })" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                                <form asp-action="Delete" asp-controller="Customer" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this movie?');">
                                    <input type="hidden" name="id" value="@customer.Id"/>
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>