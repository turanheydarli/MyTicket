

@model IList<Ticket>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tickets</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Tickets List</h6>
            <a href="@Url.Action("Create", "Ticket")" class="btn btn-primary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Create New Ticket</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Movie</th>
                        <th>Showtime</th>
                        <th>Cinema Hall</th>
                        <th>Customer</th>
                        <th>Seat Number</th>
                        <th>Purchase Date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Movie</th>
                        <th>Showtime</th>
                        <th>Cinema Hall</th>
                        <th>Customer</th>
                        <th>Seat Number</th>
                        <th>Purchase Date</th>
                        <th>Actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var ticket in Model)
                    {
                        <tr>
                            <td>@ticket.Id</td>
                            <td>@ticket.Showtime.Movie.Title</td>
                            <td>@ticket.Showtime.StartTime.ToString("g")</td>
                            <td>@ticket.Showtime.CinemaHall.Name</td>
                            <td>@ticket.Customer.Name</td>
                            <td>@ticket.Seat.SeatNumber</td>
                            <td>@ticket.PurchaseDate.ToString("g")</td>
                            <td>
                                <a href="@Url.Action("Update", "Ticket", new { id = ticket.Id })" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                                <form asp-action="Delete" asp-controller="Ticket" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this ticket?');">
                                    <input type="hidden" name="id" value="@ticket.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
